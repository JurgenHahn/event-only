<p>
  <%= link_to 'New Event', new_location_event_path(@location) %>
</p>


<% @events.each do |event| %>
  <div class="event">
    <h3>Name: <%= event.name %></h3>
    <h4>Date:<%= event.date %> , Capacity<%= event.capacity %></h4><br>
    <%= link_to "More Details", location_event_path(@location, event) %>
  </div>
<% end %>
